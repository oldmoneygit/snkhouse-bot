{
  "name": "snkhouse-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Sistema de atendimento automatizado via IA para e-commerce",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:admin": "pnpm --filter @snkhouse/admin dev",
    "dev:widget": "pnpm --filter @snkhouse/widget dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "kill:ports": "node scripts/kill-ports.js",
    "check:secrets": "tsx scripts/check-secrets.ts",
    "test:openai": "tsx scripts/test-openai-key.ts",
    "test:claude": "tsx scripts/test-claude-key.ts",
    "test:tools": "tsx scripts/test-tools-only.ts",
    "test:ai": "tsx scripts/test-ai-with-tools.ts",
    "test:claude-fallback": "tsx scripts/test-claude-fallback.ts",
    "test:widget-mock": "tsx scripts/test-widget-mock.ts",
    "test:widget-prod": "tsx scripts/test-widget-production.ts",
    "test:final": "tsx scripts/test-final-validation.ts",
    "test:visual": "tsx scripts/test-visual-widget.ts",
    "test:simulation": "tsx scripts/test-widget-simulation.ts",
    "test:real-widget": "tsx scripts/test-real-widget.ts",
    "test:api-route": "tsx scripts/test-api-route.ts",
    "test:logo": "tsx scripts/test-logo-visual.ts",
    "test:logo-simple": "tsx scripts/test-logo-simple.ts",
    "test:admin": "npx tsx scripts/test-admin-dashboard.ts",
    "test:history": "tsx scripts/test-conversation-history.ts"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "playwright": "^1.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.20.6",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
